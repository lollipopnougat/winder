<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="24" d:DesignHeight="16"
             x:Class="Winder.Controls.FileIcon">

	    <TextBlock x:Name="textBlock" FontSize="{Binding $parent.FontSize}" TextAlignment="Center" Width="24" Foreground="{Binding $parent.Foreground}" FontFamily="{StaticResource FontAwesome}" FontWeight="Bold" Text="{Binding $parent.FileType,Converter={StaticResource fileTypeIconTextConverter}}"/>
	
</UserControl>
